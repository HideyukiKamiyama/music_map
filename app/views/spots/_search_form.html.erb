<%= search_form_for @q, url: url, class: "flex flex-wrap w-full", data: { turbo: false } do |form| %>
  <%= form.select :tag_eq, Spot.tags_i18n.invert.map{|key, value| [key, Spot.tags[value]]}, { include_blank: t("defaults.search_spot_tag") }, class: "flex-grow text-gray-700 rounded-md border-gray-300 mb-1 mr-1" %>
  <div data-controller="autocomplete" data-autocomplete-url-value="/spots/autocomplete" role="combobox" class="flex-grow relative mb-1 mr-1">
    <%= form.search_field :artist_name_cont, data: { autocomplete_target: 'input' }, class: "w-full rounded-md border-gray-300", placeholder: t("defaults.search_artist_name") %>
    <%= form.hidden_field :artist_name, data: { autocomplete_target: 'hidden' } %>
    <ul class="absolute z-10 w-full rounded-md shadow bg-white mb-1 mr-1" data-autocomplete-target="results"></ul>
  </div>
  <%= form.button t("defaults.search"), class: "btn-secondary mb-1 mr-1", type: "button", onclick: "submit();" %>
<% end %>
