<div class="flex flex-wrap flex-grow">
  <%= search_form_for @q, url: url, class: "flex w-full", data: { turbo: false } do |form| %>
    <%= form.select :tag_eq, Spot.tags_i18n.invert.map{|key, value| [key, Spot.tags[value]]}, { include_blank: t("defaults.search_spot_tag") }, class: "flex-auto text-gray-700 rounded-md border border-gray-300 outline-none px-3 py-2 mr-1" %>
    <div data-controller="autocomplete" data-autocomplete-url-value="/spots/autocomplete" role="combobox" class="flex-auto relative">
      <%= form.search_field :artist_name_cont, data: { autocomplete_target: 'input' }, class: "w-full rounded-md border border-gray-300 outline-none px-3 py-2", placeholder: t("defaults.search_artist_name") %>
      <%= form.hidden_field :artist_name, data: { autocomplete_target: 'hidden' } %>
      <ul class="list-group flex-auto absolute z-10 w-full bg-white" data-autocomplete-target="results"></ul>
    </div>
    <%= form.submit t("defaults.search"), class: "btn-secondary ml-2" %>
  <% end %>
</div>
