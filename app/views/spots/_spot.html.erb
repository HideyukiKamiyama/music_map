<div class="p-2 w-full">
  <div class="flex justify-between items-center bg-gray-100 rounded shadow p-4 h-full">
    <%= link_to spot_path(spot), data: { turbo: false } do %>
      <div><%= spot.spot_name %> / <%= spot.artist.name %></div>
    <% end %>
    <div class="flex">
      <div class="badge badge-lg bg-gray-200 border-none w-24 mr-3"><%= spot.tag_i18n %></div>
      <% if logged_in? %>
        <%= render_bookmark_button(current_user, spot) %>
      <% end %>
    </div>
  </div>
</div>
