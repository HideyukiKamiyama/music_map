<div id="comment-<%= comment.id %>" class="p-2 w-full">
  <div class="bg-gray-100 rounded p-4 h-full items-center">
    <div class="flex justify-between">
      <div class="flex items-center mb-4">
        <div class="avatar">
          <div class="w-10 rounded-full">
            <%= image_tag comment.user.avatar_url %>
          </div>
        </div>
        <div class="ml-3">
          <%= comment.user.name %>
        </div>
      </div>
      <div>
        <p><%= l comment.created_at, format: :default %></p>
      </div>
    </div>
    <div class="mb-4"><%= simple_format(comment.body) %></div>
    <div class="flex justify-end">
      <% if logged_in? && current_user.own?(comment) %>
        <div class="flex">
          <%= link_to comment_path(comment), data: { turbo_method: :delete, turbo_frame: "_top", turbo_confirm: t("defaults.delete_confirm") } do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
