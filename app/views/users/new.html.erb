<div class="container mx-auto px-36">
  <div class="mt-4">
    <h1 class="text-xl font-bold mb-8">会員登録</h1>
    <%= form_with model: @user, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :name, "ニックネーム", class: "text-gray-700 text-base font-bold mb-2" %>
        <%= form.text_field :name, autofocus: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-4">
        <%= form.label :email, "メールアドレス", class: "text-gray-700 text-base font-bold mb-2" %>
        <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="mb-10">
        <%= form.label :password, "パスワード", class: "text-gray-700 text-base font-bold mb-2" %>
        <%= form.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" %>
        <%= form.label :password_confirmation, "パスワード確認", class: "text-gray-700 text-base font-bold mb-2" %>
        <%= form.password_field :password_confirmation, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div class="flex items-center justify-center">
        <%= form.submit "登録", class: "flex-shrink-0 text-neutral-50 bg-amber-500 border-0 py-2 px-8 focus:outline-none hover:bg-amber-600 rounded text-lg mt-10 sm:mt-0" %>
      </div>
    <% end %>
  </div>
</div>
