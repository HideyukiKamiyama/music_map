<% content_for(:title, t("defaults.profile")) %>
<div class="container mx-auto px-36">
  <div class="mb-20">
    <h1 class="text-xl font-bold mb-2"><%= t("defaults.profile") %></h1>
    <hr>
  </div>

  <div class="mx-32">
    <div class="mb-10">
      <h2 class="text-base font-bold mb-2"><%= t(".avatar_image") %></h2>
      <div class="avatar flex justify-center mb-4">
        <div class="w-24 rounded-full">
          <%= image_tag current_user.avatar_url %>
        </div>
      </div>
      <hr>
    </div>
    <div class="mb-10">
      <h2 class="text-base font-bold mb-2"><%= t(".user_name") %></h2>
      <p class="flex justify-center mb-2"><%= current_user.name %></p>
      <hr>
    </div>
    <div class="mb-20">
      <h2 class="text-base font-bold mb-2"><%= t("defaults.email") %></h2>
      <p class="flex justify-center mb-2"><%= current_user.email %></p>
      <hr>
    </div>
  </div>

  <div class="flex justify-center">
    <%= link_to t("defaults.edit"), edit_profile_path, class: "btn-primary" %>
  </div>
</div>
