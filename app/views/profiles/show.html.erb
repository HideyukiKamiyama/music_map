<% content_for(:title, t("defaults.profile")) %>
<div class="container mx-auto px-36">
  <div class="mb-10">
    <h1 class="text-xl font-bold mb-2"><%= t("defaults.profile") %></h1>
    <hr>
  </div>

  <div class="flex justify-center">
    <table class="table-fixed w-10/12 mb-20 text-center">
      <tr class="items-center h-20">
        <td class="text-base font-bold"><%= t(".user_name") %></td>
        <td><%= current_user.name %></td>
      </tr>
      <tr class="items-center h-20">
        <td class="text-base font-bold"><%= t("defaults.email") %></td>
        <td><%= current_user.email %></td>
      </tr>
      <tr class="items-center h-20">
        <td class="text-base font-bold"><%= t(".avatar_image") %></td>
        <td>
          <div class="avatar">
            <div class="w-24 rounded-xl">
              <%= image_tag current_user.avatar_url %>
            </div>
          </div>
        </td>
      </tr>
    </table>
  </div>
</div>
