<div class="container mx-auto px-36">
  <div class="mb-8">
    <h1 class="text-xl font-bold mb-2"><%= t("defaults.profile_edit") %></h1>
    <hr>
  </div>

  <%= form_with model: @user, url: profile_path, local: true do |form| %>
    <%= render "shared/error_messages", object: form.object %>

    <div class="mb-6">
      <%= form.label :name, class: "block text-base font-bold mb-2" %>
      <%= form.text_field :name, autofocus: true, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight" %>
    </div>

    <div class="mb-10">
      <%= form.label :avatar, class: "block text-base font-bold mb-2" %>
      <%= form.file_field :avatar, accept: "image/*", class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight" %>
      <%= form.hidden_field :avatar_cache %>
    </div>

    <div class="flex items-center justify-center">
      <%= form.button t("defaults.create"), class: "btn-primary", type: "button", onclick: "submit();" %>
    </div>
  <% end %>
</div>
