<% content_for(:title, t("defaults.password_reset")) %>
<div class="container mx-auto px-8 xl:px-28 h-[36rem]">
  <div class="mb-8">
    <h1 class="text-xl font-bold mb-2"><%= t("defaults.password_reset") %></h1>
    <hr>
  </div>

  <%= form_with model: @user, url: password_reset_path(@token), local: true do |form| %>
    <%= render "shared/error_messages", object: form.object %>

    <div class="mb-6">
      <%= form.label :password, class: "block text-base font-bold mb-2" %>
      <%= form.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight" %>
    </div>

    <div class="mb-10">
      <%= form.label :password_confirmation, class: "block text-base font-bold mb-2" %>
      <%= form.password_field :password_confirmation, class: "shadow appearance-none border rounded w-full py-2 px-3 leading-tight" %>
    </div>

    <div class="flex items-center justify-center">
      <%= form.button t("defaults.change"), class: "btn-primary", type: "button", onclick: "submit();" %>
    </div>
  <% end %>
</div>
